<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtTitleExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Explore The World"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleExplore"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/thailand"
            android:tag="thailand"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/france"
            android:tag="france"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/spain"
        android:tag="spain"
        android:clickable="true"
        android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ll1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/belgium"
            android:tag="belgium"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/norway"
            android:tag="norway"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/italy"
            android:tag="italy"
            android:clickable="true"
            android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ll2">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/germany"
            android:tag="germany"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/israel"
            android:tag="israel"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/poland"
            android:tag="poland"
            android:clickable="true"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ll3">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ukraine"
            android:tag="ukraine"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/russia"
            android:tag="russia"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sweden"
            android:tag="sweden"
            android:clickable="true"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ll4">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/portugal"
            android:tag="portugal"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/swizerland"
            android:tag="swizerland"
            android:clickable="true"
            android:onClick="onClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/hungary"
            android:tag="hungary"
            android:clickable="true"
            android:onClick="onClick"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
